extends ../layout

block content
    main.main-content
        h1= title
        form.form(method="post")
            label Username
                input(type="text", name="username")
            label Email
                input(type="email", name="email")
            label Password
                input(type="password", name="password")
            input(type="submit", value="Create")
            if msg
                p= msg
        a(href="/users") Show all
