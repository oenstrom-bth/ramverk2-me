extends ../layout

block content
    main.main-content
        h1= title
        a(href="/users/new") Create user
        table
            thead
                tr
                    th Username
                    th Email
                    th Password
                    th Action
            tbody
                each user in users
                    tr
                        td= user.username
                        td= user.email
                        td= user.password
                        td
                            a(href="/users/update/" + user.username) Edit 
                            span |
                            a(href="/users/delete/" + user.username)  Delete
